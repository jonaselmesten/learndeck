<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="mainVbox" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="800.0" prefWidth="800.0" spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu.user.teacher.AddRemoveStudentController">
   <children>
      <VBox alignment="CENTER" prefHeight="0.0" prefWidth="600.0">
         <children>
            <Text fx:id="courseName" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI Light Italic" size="26.0" />
               </font>
            </Text>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Students:">
                     <font>
                        <Font name="Segoe UI Light Italic" size="16.0" />
                     </font>
                  </Text>
                  <Text fx:id="studentCount" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font name="Segoe UI Light Italic" size="16.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
         </children>
      </VBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="801.0" prefWidth="800.0">
         <content>
            <VBox fx:id="resultBox" alignment="TOP_CENTER" prefHeight="508.0" prefWidth="798.0" spacing="15.0">
               <padding>
                  <Insets top="15.0" />
               </padding></VBox>
         </content>
      </ScrollPane>
      <HBox alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="200.0" spacing="15.0">
         <children>
            <Button depthTest="DISABLE" maxWidth="175.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#searchStudentButtonPushed" style="-fx-background-color: white; -fx-border-style: solid;" text="Search student">
               <font>
                  <Font name="Segoe UI Light" size="20.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
