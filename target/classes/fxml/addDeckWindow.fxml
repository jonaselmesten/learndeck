<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="120.0" maxWidth="250.0" spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu.user.teacher.AddDeckController">
   <children>
      <TextField fx:id="courseName" maxWidth="175.0" minHeight="25.0" prefWidth="200.0" promptText="Enter course name" style="-fx-border-style: solid;">
         <font>
            <Font name="Segoe UI Light" size="12.0" />
         </font>
      </TextField>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button depthTest="DISABLE" mnemonicParsing="false" onAction="#addCourseButtonPushed" prefWidth="175.0" style="-fx-background-color: white; -fx-border-style: solid;" text="Add course">
               <font>
                  <Font name="Segoe UI Light" size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
